<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.mapper.EmployeeMapper">
	<resultMap id="employeeMap"
		type="com.example.backend.dto.EmployeeDto">
		<result property="employeeId" column="employee_id"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="employeeName" column="employee_name"
			javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>

	<select id="get" parameterType="int" resultMap="employeeMap">
		select * from
		employee
	</select>

	<select id="getList"
		parameterType="com.example.backend.dto.EmployeeDto"
		resultMap="employeeMap">
		select * from
		employee
		<where>
			<if test="employeeId != null and employeeId !=''">
				AND employee_id = #{employeeId}
			</if>
			<if test="employeeName != null and employeeName !=''">
				And employee_name = #{employeeName}
			</if>
		</where>
	</select>

</mapper> 