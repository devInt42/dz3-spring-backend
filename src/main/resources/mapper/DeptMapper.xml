<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.mapper.DeptMapper">

<select id="getList" resultType="com.example.backend.dto.DeptDto">
	select * from dept
</select>

<insert id="insertDept" parameterType="map">
	insert into dept (dept_name, location) values (#{deptName}, #{location})
</insert>

<delete id="deleteDept" parameterType="Integer">
	delete from dept where dept_code = #{dept_code}
</delete>

<update id="updateDept" parameterType="com.example.backend.dto.DeptDto">
	update dept set dept_name=#{dept_name}, location=#{location} where dept_code = #{dept_code}
</update>

<select id="getSearchDept" parameterType="Integer" resultType="com.example.backend.dto.DeptDto">
	select dept_name, location from dept where dept_code = #{dept_code}
</select>

</mapper>