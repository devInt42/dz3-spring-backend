<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.example.backend.mapper.CompanyMapper">
	<resultMap id="companyMap"
		type="com.example.backend.dto.CompanyDto">
		<result property="companyCode" column="company_code"
			javaType="java.lang.Integer" jdbcType="INTEGER" />
		<result property="companyName" column="company_name"
			javaType="java.lang.String" jdbcType="VARCHAR" />
		</resultMap>
		
		<!-- select -->
		<select id= "get" parameterType="int" resultMap="companyMap">
		 	select * from
		 	COMPANY
		 	where COMPANY_CODE = #{companyCode}	
		</select>
		
		<!-- List -->
		<select id="getCompanyList" parameterType="com.example.backend.dto.CompanyDto"
		 resultMap="companyMap">
		select*from COMPANY
		</select>
		
		<!-- delete -->
		<delete id="delete" parameterType="int">
		delete from COMPANY where COMPANY_CODE = #{companyCode}
		</delete>
		
		<!-- insert -->
		<insert id="add" parameterType="map">
		insert into COMPANY(COMPANY_NAME) values(#{companyName})
		</insert>
		
		<!-- update -->
		<update id="set">
		update COMPANY set COMPANY_NAME= #{companyName} where COMPANY_CODE = #{companyCode}
		</update>
</mapper>