	<select id = "getallCompanyInfo" resultType = "com.example.backend.dto.CompanyDto">
		SELECT * FROM company
	</select>
	
	<select id = "getCompanyInfo" resultType = "com.example.backend.dto.CompanyDto" parameterType = "int">
		SELECT * FROM company
		<where>
			<if test = "#{company_code} != null || #{company_code} != 0">
				COMPANY_CODE = #{company_code}
			</if>
		</where>
	</select>
	
	<insert id = "insertCompanyInfo" parameterType = "com.example.backend.dto.CompanyDto">
		INSERT INTO company VALUES(#{company_code}, #{company_name}, #{company_category}, #{company_call}, #{company_regist}, #{company_president}, #{company_domain}, #{company_addr}, #{company_homepage})
	</insert>
	
	<update id = "updateCompany" parameterType = "com.example.backend.dto.CompanyDto">
		update company set company_name = #{company_name} ,company_category = #{company_category}, 
		company_call = #{company_call}, company_regist = #{company_regist}, company_addr = #{company_addr}, 
		company_homepage = #{company_homepage}
		where company_code = #{company_code} 
	</update>
	
	<delete id = "DeleteCompany" parameterType = "int">
	 delete from company where company_code = #{company_code}
	</delete>
